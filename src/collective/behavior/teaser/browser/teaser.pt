<tal:block tal:define="teaser view/teaser"
           tal:condition="teaser">
<div tal:define="has_image python:teaser.has_key('teaser_image')"
     class="header-startpage">

    <div class="col-xs-12 col-sm-4 col-md-4 col-lg-4 padding-right-reset"
         tal:condition="has_image">
        <div class="teaser-img">
            <img class="img-responsive"
                 tal:attributes="src teaser/teaser_image">
        </div>
    </div>
    <div tal:attributes="class python: 'col-xs-12 col-sm-8 col-md-8 col-lg-8 padding-left-reset' if has_image else 'col-xs-12 col-sm-12 col-md-12 col-lg-12'">
        <div class="teaser-verlauf">
            <h1 tal:condition="python:teaser.has_key('teaser_title')"
                tal:content="teaser/teaser_title">
                Titel
            </h1>
            <h3 tal:condition="python:teaser.has_key('teaser_description')"
                tal:content="teaser/teaser_description">
                Subtitle
            </h3>
            <p tal:condition="python:teaser.has_key('teaser_text')"
               tal:replace="structure teaser/teaser_text">
               Text
            </p>
        </div>
    </div>
</div>
</tal:block>