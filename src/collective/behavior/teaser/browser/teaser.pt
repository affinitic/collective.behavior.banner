<tal:block tal:define="teaser view/find_teaser;
                       portal_url context/@@plone_portal_state/portal_url"
           tal:condition="teaser">
<div tal:define="has_image python:teaser.has_key('teaser_image')"
     tal:attributes="class python:'teaser_container' if has_image else 'teaser_container teaser_without_image'"
     class="teaser_container">
  <div class="teaser_inner_container">
    <div class="teaser_image_container"
         tal:condition="has_image">
        <div class="">
          <a href="#"
             tal:attributes="href teaser/teaser_link"
             tal:omit-tag="not:teaser/teaser_link">
            <img class="teaser_image"
                 tal:attributes="src string:${teaser/teaser_image}/preview">
          </a>
        </div>
    </div>
    <div class="teaser_content_container">
        <div class="teaser-verlauf">
            <h1 tal:condition="python:teaser.has_key('teaser_title')"
                tal:content="teaser/teaser_title">
                Titel
            </h1>
            <h3 tal:condition="python:teaser.has_key('teaser_description')"
                tal:content="teaser/teaser_description">
                Subtitle
            </h3>
            <p tal:condition="python:teaser.has_key('teaser_text')"
               tal:replace="structure teaser/teaser_text">
               Text
            </p>
        </div>
    </div>
  </div>

</div>

<link media="screen" tal:attributes="href string:${portal_url}/++resource++collective.behavior.teaser/teaser.css" type="text/css" rel="stylesheet">

</tal:block>